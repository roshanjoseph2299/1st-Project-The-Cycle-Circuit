          <div class="container">
            <h3>Add New Category</h3>
            <form action="/add_category" method="post" onsubmit="validateForm(event)">
              <div class="form-group">
                <label for="productName" class="mt-4 mb-4">Category Name</label>
                <input type="text" id="categoryNameInput"  name="name" placeholder="Enter product name">
              </div>
          
           
             
             
              <div class="form-group" >
                <button type="submit"class="mt-3">Add Product</button>
              </div>
            </form>
          </div>

          <script>
            function validateForm(event) {
              event.preventDefault();
              
              // Validate category name
              var categoryName = document.getElementById("categoryNameInput").value;
              
              if (categoryName === "") {
                swal("Validation Error", "Please enter a category name", "error");
                return;
              }
          
              if (categoryName !== categoryName.toUpperCase()) {
      swal("Validation Error", "Category name should be in all capital letters", "warning");
      return;
    }

          
              // If all validations pass, submit the form
              event.target.submit();
            }
          </script>



