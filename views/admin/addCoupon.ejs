<div class="container-fluid position-relative d-flex p-0">
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Content Start -->
    <div class="content">
        <%- include('../admin/partials/admin_navbar.ejs')%>
      

        <div class="col-sm-12 col-xl-6 container-fluid mt-5">
    
            <div class="bg-secondary rounded h-100 p-4">
              <div class="text-center">
                  <h6 class="mb-4">Add Coupon</h6>
                </div>
                <form action="" method="post">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Coupon Code</label>
                        <input name="code" class="form-control form-control-lg mb-3" type="text" placeholder=""
                        aria-label=".form-control-lg example">
                    </div>
                    <div class="form-floating mb-3">
                        <input type="date" name="startingDate" class="form-control" id="floatingPassword" placeholder="">
                        <label for="floatingPassword">Date</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="date" name="expiryDate" class="form-control" id="floatingPassword" placeholder="">
                        <label for="floatingPassword">Expiry Date</label>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Discount</label>
                        <input name="discount" class="form-control form-control-lg mb-3" type="text" placeholder=""
                        aria-label=".form-control-lg example">
                    </div>
                    
                    <% if(locals.message){%>
                        <div id="msg" class="alert alert-danger text-center">
                           <%= message %>
                        </div>
                    <% } %>
                    <button class="btn btn-lg btn-outline-success w-100 mt-2" type="submit">Add Coupon</button>
                </form>
            </div>
          </div>
        <!-- Recent Sales End -->
    </div>
    <!-- Content End -->



    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
