      <% if (data && data.length > 0) { %>
        <h3>Recent Address:</h3>
        <ul>
          <% data.sort((a, b) => b.timestamp - a.timestamp); %> <!-- Sort the data array in descending order based on the timestamp -->
          <% const latestAddress = data[data.length - 1]; %> <!-- Retrieve the last element of the sorted array -->
          <li>
            <input type="radio" name="address" value="<%= latestAddress._id %>" id="latestAddress" checked>
            <label for="latestAddress">Address: <%= latestAddress.address %> </label>
          </li>
					<li>Phone: <%= user.phone %></li>
										<li>Pin Code: <%= latestAddress.pincode %> </li>
										<li>City: <%= latestAddress.city %></li>
										<li>State: <%= latestAddress.state %></li>
          <!-- Rest of the recent address code -->

        </ul>
        <% if (data.length > 1) { %> <!-- Check if there are other addresses -->
          <h3>Other Addresses:</h3>
          <ul>
            <% for (let i = 0; i < data.length - 1; i++) { %> <!-- Loop through addresses except the latest one -->
              <li>
                <input type="radio" name="address" value="<%= data[i]._id %>" id="address<%= i %>">
